{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <div class="app-page-title mb-1">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-graph text-success">
                    </i>
                </div>
                <div>Order
                    <div class="page-title-subheading">Order
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Order</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped " id="dataTable" >
                    <thead>
                    <tr>
                        <th style="width:10%" >ID</th>
                        <th style="width:10%" >Client</th>
                        <th style="width:10%" >Subtotal</th>
                        <th style="width:10%" >Tax</th>
                        <th style="width:10%" >Total</th>
                        <th style="width:10%">Fecha</th>
                        <th style="width:10%">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for sale in sales %}
                        <tr>

                            <td>{{sale.id}}</td>
                            <td> {{sale.client}}</td>
                            <td>{{sale.subtotal}}</td>

                            <td>{{sale.tax}}</td>

                            <td>{{sale.total}}</td>

                            <td>{{ sale.time ? sale.time|date('d-m-Y H:i') : '' }}</td>



                            <td>
                                <div class="btn btn-primary btn-sm">
                                    <a class="text-white" href="{{ path('order', {'id': sale.id}) }}">View</a>
                                </div>
                                <div class="btn btn-primary btn-sm">
                                    <a class="text-white" href="{{ path('order', {'id': sale.id}) }}">Edit</a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>
        <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
    </div>


{% endblock %}

